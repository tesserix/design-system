{
  "name": "@tesserix/native",
  "version": "1.0.0",
  "description": "Tesserix Design System - React Native UI components (Expo-first)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "react-native": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "react-native": "./src/index.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-native": ">=0.70.0"
  },
  "dependencies": {
    "@tesserix/hooks": "workspace:*",
    "@tesserix/tokens": "workspace:*",
    "@tesserix/utils": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.18",
    "@types/react-native": "^0.73.0",
    "@react-native/babel-preset": "^0.76.9",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "react": "^18.3.1",
    "react-native": "^0.76.9",
    "react-test-renderer": "^18.3.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tesserix/design-system",
    "directory": "packages/native"
  },
  "keywords": [
    "react-native",
    "components",
    "design-system",
    "ui",
    "expo",
    "tesserix"
  ],
  "author": "Tesserix",
  "license": "MIT"
}
